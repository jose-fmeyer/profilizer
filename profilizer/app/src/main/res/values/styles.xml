<resources>

    <!-- Base application theme. -->
    <style name="ProfilizerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:windowBackground">@color/secondary_background</item>
        <item name="colorControlHighlight">@color/light_grey</item>
    </style>

    <style name="ProfilizerTestTheme" parent="ProfilizerTheme">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="ProfilizerToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="MyAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="ProfilizerTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ProfilizerTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
